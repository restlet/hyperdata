<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.0.0//EN" "http://google-web-toolkit.googlecode.com/svn/trunk/distro-source/core/src/gwt-module.dtd">
<module>
	<inherits name="com.google.gwt.core.Core" />
	<inherits name="com.google.gwt.user.User" />
    <inherits name="com.google.gwt.json.JSON" />

    <generate-with class="org.sprintapi.gwt.converter.BeanAdapterGenerator">
        <when-type-assignable class="org.sprintapi.gwt.converter.client.bean.BeanAdapter" />
    </generate-with>

    <generate-with class="org.sprintapi.gwt.converter.ArrayAdapterGenerator">
        <when-type-assignable class="org.sprintapi.gwt.converter.client.array.ArrayAdapter" />
    </generate-with>
    
    <source path="client">
    <!-- 
        <exclude name="**/*Test.java" />
        <exclude name="**/*TestData.java" />
        <exclude name="**/Gwt*Test.java" />
 -->
    </source>
</module>